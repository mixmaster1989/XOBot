# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# JavaScript files
*.js text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Config files
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary
